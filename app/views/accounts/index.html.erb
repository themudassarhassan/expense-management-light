<div class="max-w-3xl mx-auto mt-10">
  <h1 class="text-2xl font-bold mb-5 text-center">Your Accounts</h1>

  <% if @accounts.any? %>
    <table class="min-w-full bg-white shadow-md rounded">
      <thead>
        <tr>
          <th class="py-2 px-4 bg-gray-200 border-b">Name</th>
          <th class="py-2 px-4 bg-gray-200 border-b">Account Type</th>
          <th class="py-2 px-4 bg-gray-200 border-b">Balance</th>
          <th class="py-2 px-4 bg-gray-200 border-b">Actions</th>
        </tr>
      </thead>
      <tbody>
        <% @accounts.each do |account| %>
          <tr>
            <td class="py-2 px-4 border-b"><%= account.name %></td>
            <td class="py-2 px-4 border-b capitalize"><%= account.account_type %></td>
            <td class="py-2 px-4 border-b"><%= number_with_delimiter(account.balance) %></td>
            <td class="py-2 px-4 border-b" data-turbo-prefetch="false">
              <%= link_to 'Edit', edit_account_path(account), class: "inline-block bg-yellow-300 hover:bg-yellow-400 text-yellow-900 font-bold py-1 px-2 rounded mr-2" %>
              <%= link_to 'Delete', account, data: {turbo_method: :delete, turbo_confirm: 'Are you sure?'}, class: "inline-block bg-red-500 hover:bg-red-700 text-white font-bold py-1 px-2 rounded" %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  <% else %>
    <p class="text-center text-gray-600 mt-5">You have no accounts. <%= link_to 'Create one', new_account_path, class: "text-blue-500 underline" %></p>
  <% end %>
</div>
